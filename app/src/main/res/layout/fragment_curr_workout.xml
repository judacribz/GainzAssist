<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.start_workout.fragments.CurrWorkout">

    <!--Resources:
        http://www.fontspace.com/category/athletic -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:layout_weight="5">

        <!-- How to do exercise button-->
        <Button
            android:id="@+id/btn_how_to"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:padding="1dp"
            android:minWidth="150dp"/>

        <!-- Exercise name -->
        <TextView
            android:id="@+id/tv_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/btn_how_to"
            android:background="@color/colorAccent"
            android:fontFamily="@font/fnl"
            android:textSize="40sp"/>


        <!-- Exercise set number -->
        <TextView
            android:id="@+id/tv_set_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exercise_title"
            android:layout_alignParentBottom="true"
            android:minWidth="100dp"
            android:background="@color/colorAccent"
            android:textAllCaps="true"/>

        <!-- Timer -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exercise_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/tv_set_info"
            android:background="@color/colorAccent"
            android:textColor="@color/colorText"
            android:textSize="40sp"/>
    </RelativeLayout>

    <!-- Equipment graphics -->
    <RelativeLayout
        android:id="@+id/rl_equip_disp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorText">
    </RelativeLayout>

    <!-- Exercise reps and weight control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorAccent">

        <EditText
            android:id="@+id/txtReps"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btnDecReps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/txtReps"
            android:layout_alignBottom="@id/txtReps"
            android:layout_toStartOf="@id/txtReps"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btnIncReps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/txtReps"
            android:layout_alignBottom="@id/txtReps"
            android:layout_toEndOf="@id/txtReps"
            android:src="@drawable/ic_plus"/>

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/txtReps"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btnDecWeight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/txtWeight"
            android:layout_alignBottom="@id/txtWeight"
            android:layout_toStartOf="@id/txtWeight"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btnIncWeight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/txtWeight"
            android:layout_alignBottom="@id/txtWeight"
            android:layout_toEndOf="@id/txtWeight"
            android:src="@drawable/ic_plus"/>
    </RelativeLayout>

    <!-- Exercise set control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/btnCancelSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/cancel_set"/>

        <Button
            android:id="@+id/btnFinishSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/finish_set" />
    </RelativeLayout>
</LinearLayout>