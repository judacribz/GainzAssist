<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.start_workout.fragments.CurrWorkout">

    <!--Resources:
        http://www.fontspace.com/category/athletic -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:layout_weight="5">

        <!-- How to do exercise button-->
        <Button
            android:id="@+id/btn_how_to"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/how_to"
            android:textSize="20sp"/>

        <!-- Exercise name -->
        <TextView
            android:id="@+id/tv_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/btn_how_to"
            android:layout_alignTop="@id/btn_how_to"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/btn_how_to"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:fontFamily="@font/fnl"/>

        <!-- Exercise/Set number -->
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/btn_how_to"
            android:layout_marginStart="1dp"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_ex_info"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/tv_set_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25sp"/>
        </LinearLayout>

        <!-- Timer -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exercise_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/ll_info"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:longClickable="false"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="40sp"/>
    </RelativeLayout>

    <!-- Equipment graphics -->
    <RelativeLayout
        android:id="@+id/rl_equip_disp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorText">
    </RelativeLayout>

    <!-- TODO fix edittext heights (make identical)-->
    <!-- Exercise reps and weight control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:background="@color/colorAccent">

        <EditText
            android:id="@+id/et_curr_reps"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btn_dec_reps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_reps"
            android:layout_alignBottom="@id/et_curr_reps"
            android:layout_toStartOf="@id/et_curr_reps"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_reps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_reps"
            android:layout_alignBottom="@id/et_curr_reps"
            android:layout_toEndOf="@id/et_curr_reps"
            android:src="@drawable/ic_plus"/>

        <EditText
            android:id="@+id/et_curr_weight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/et_curr_reps"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btn_dec_weight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_weight"
            android:layout_alignBottom="@id/et_curr_weight"
            android:layout_toStartOf="@id/et_curr_weight"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_weight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_weight"
            android:layout_alignBottom="@id/et_curr_weight"
            android:layout_toEndOf="@id/et_curr_weight"
            android:src="@drawable/ic_plus"/>
    </RelativeLayout>

    <!-- Exercise set control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:padding="3dp">

        <Button
            android:id="@+id/btnCancelSet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/cancel_set"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_finish_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/finish_set"
            android:textSize="20sp"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>