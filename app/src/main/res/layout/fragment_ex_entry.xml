<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:theme="@style/AddWorkoutTheme"
	tools:context=".activities.add_workout.ExercisesEntry">

	<!-- Exercise Name EditText -->
	<!--========================================================================================-->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight">

		<android.support.design.widget.TextInputLayout
			android:layout_height="75dp"
			android:layout_width="match_parent"
			android:layout_margin="10dp"
			android:layout_centerInParent="true"
			app:hintTextAppearance="@style/HintTextAppearance">

			<EditText
				android:id="@+id/et_exercise_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="@string/hint_exercise_name"
				android:inputType="text"
				android:textColorHint="@color/colorLightAccent"
				android:translationY="2dp"/>
		</android.support.design.widget.TextInputLayout>
	</RelativeLayout>
	<!--Exercise=Name===========================================================================-->

	<!-- Exercise equipment spinner -->
	<Spinner
		android:id="@+id/spr_equipment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_md_weight"
		android:layout_margin="10dp"
		android:textColor="@color/colorText" />

	<!-- Weight -->
	<!--========================================================================================-->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight">

		<EditText
			android:id="@+id/et_weight"
			android:layout_width="wrap_content"
			android:layout_height="51dp"
			android:layout_margin="10dp"
			android:layout_centerInParent="true"
			android:textAlignment="center"
			android:minEms="4"
			android:inputType="numberDecimal"/>

		<ImageButton
			android:id="@+id/ibtn_inc_weight"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_weight"
			android:layout_toEndOf="@id/et_weight"
			android:src="@drawable/ic_plus"/>

		<ImageButton
			android:id="@+id/ibtn_dec_weight"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_weight"
			android:layout_toStartOf="@id/et_weight"
			android:src="@drawable/ic_minus"
			android:visibility="gone" />

		<TextView
			android:id="@+id/tv_num_weight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="-10dp"
			android:layout_below="@id/et_weight"
			android:layout_centerHorizontal="true"
			android:text="@string/hint_lbs"/>
	</RelativeLayout>
	<!--WEight==================================================================================-->


	<!-- Number of Reps -->
	<!--========================================================================================-->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight"
		tools:ignore="NestedWeights">

		<EditText
			android:id="@+id/et_num_reps"
			android:layout_width="wrap_content"
			android:layout_height="51dp"
			android:layout_margin="10dp"
			android:layout_centerInParent="true"
			android:textAlignment="center"
			android:ems="4"
			android:inputType="number"
			android:text="@string/min"/>

		<ImageButton
			android:id="@+id/ibtn_inc_reps"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_num_reps"
			android:layout_toEndOf="@id/et_num_reps"
			android:src="@drawable/ic_plus"/>

		<ImageButton
			android:id="@+id/ibtn_dec_reps"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_num_reps"
			android:layout_toStartOf="@id/et_num_reps"
			android:src="@drawable/ic_minus"/>

		<TextView
			android:id="@+id/tv_num_reps"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/et_num_reps"
			android:layout_marginTop="-10dp"
			android:layout_centerHorizontal="true"
			android:text="@string/hint_reps"/>
	</RelativeLayout>
	<!--Number=of=Sets==========================================================================-->

	<!-- Number of Sets -->
	<!--========================================================================================-->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight">

		<EditText
			android:id="@+id/et_num_sets"
			android:layout_width="wrap_content"
			android:layout_height="51dp"
			android:layout_margin="10dp"
			android:layout_centerInParent="true"
			android:textAlignment="center"
			android:ems="4"
			android:inputType="number"
			android:text="@string/starting_sets" />

		<ImageButton
			android:id="@+id/ibtn_inc_sets"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_num_sets"
			android:layout_toEndOf="@id/et_num_sets"
			android:src="@drawable/ic_plus"/>

		<ImageButton
			android:id="@+id/ibtn_dec_sets"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_alignBottom="@id/et_num_sets"
			android:layout_toStartOf="@id/et_num_sets"
			android:src="@drawable/ic_minus"/>

		<TextView
			android:id="@+id/tv_num_sets"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/et_num_sets"
			android:layout_marginTop="-10dp"
			android:layout_centerHorizontal="true"
			android:text="@string/hint_sets"/>
	</RelativeLayout>
	<!--Number=of=Sets==========================================================================-->

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight"
		android:gravity="bottom">

		<Button
			android:id="@+id/btn_enter"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:text="@string/enter"
			android:textColor="@drawable/selector_btn_text_default"
			android:textSize="20sp"/>

		<Button
			android:id="@+id/btn_cancel"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:text="@string/cancel"
			android:textColor="@drawable/selector_btn_text_default"
			android:textSize="20sp"/>
	</RelativeLayout>
</LinearLayout>