<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="4dp"
	tools:context=".activities.add_workout.ExercisesEntry">

	<!-- Exercise Name EditText -->
	<!--========================================================================================-->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight"
		android:layout_margin="4dp"
		android:padding="4dp"
		android:background="@drawable/border"
		android:elevation="3dp"
		android:translationZ="1dp">

		<android.support.design.widget.TextInputLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_margin="4dp"
			android:layout_centerInParent="true"
			app:hintTextAppearance="@style/HintTextAppearance">

			<EditText
				android:id="@+id/et_exercise_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="@string/hint_exercise_name"
				android:inputType="text"
				android:textColorHint="@color/colorLightAccent"
				android:translationY="2dp"/>
		</android.support.design.widget.TextInputLayout>
	</RelativeLayout>
	<!--Exercise=Name===========================================================================-->

	<!-- Exercise equipment spinner -->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_md_weight"
		android:layout_margin="4dp"
		android:padding="4dp"
		android:background="@drawable/border"
		android:elevation="3dp"
		android:translationZ="1dp">

		<TextView
			android:id="@+id/tv_equipment"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_margin="2dp"
			android:gravity="center"
			android:text="@string/equipment"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toEndOf="@id/tv_equipment"
			android:layout_margin="2dp"
			android:background="@drawable/spinner_box">

			<Spinner
				android:id="@+id/spr_equipment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:textAlignment="center"
				android:background="@color/colorLightBg"
				android:textColor="@color/colorText"
			style="@style/Widget.AppCompat.Spinner"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_gravity="center"
				android:src="@drawable/ic_drop_dark" />
		</RelativeLayout>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		android:layout_margin="4dp"
		android:padding="4dp"
		android:background="@drawable/border"
		android:elevation="3dp"
		android:translationZ="1dp"
		android:orientation="vertical">

	<!-- Weight -->
	<!--========================================================================================-->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@integer/ll_md_weight"
			android:padding="2dp"
			tools:ignore="NestedWeights">

			<EditText
				android:id="@+id/et_weight"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:layout_centerInParent="true"
				android:layout_margin="2dp"
				android:inputType="numberDecimal"
				android:minEms="4"
				android:text="@string/starting_weight"
				android:textAlignment="center"
				android:selectAllOnFocus="true"/>

			<ImageButton
				android:id="@+id/ibtn_dec_weight"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:layout_toStartOf="@id/et_weight"
				android:layout_margin="2dp"
				android:src="@drawable/ic_minus"
				android:visibility="gone" />

			<ImageButton
				android:id="@+id/ibtn_inc_weight"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_margin="2dp"
				android:layout_toEndOf="@id/et_weight"
				android:src="@drawable/ic_plus"/>
		</RelativeLayout>
	<!--Weight==================================================================================-->

	<!-- Number of Reps -->
	<!--========================================================================================-->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@integer/ll_md_weight"
			android:padding="2dp">

			<EditText
				android:id="@+id/et_num_reps"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:layout_centerInParent="true"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:ems="4"
				android:inputType="number"
				android:text="@string/starting_reps"
				android:selectAllOnFocus="true"/>

			<ImageButton
				android:id="@+id/ibtn_dec_reps"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:layout_toStartOf="@id/et_num_reps"
				android:layout_margin="2dp"
				android:src="@drawable/ic_minus"/>

			<ImageButton
				android:id="@+id/ibtn_inc_reps"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_margin="2dp"
				android:layout_toEndOf="@id/et_num_reps"
				android:src="@drawable/ic_plus"/>
		</RelativeLayout>
	<!--Number=of=Sets==========================================================================-->

	<!-- Number of Sets -->
	<!--========================================================================================-->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@integer/ll_md_weight"
			android:padding="2dp">

			<EditText
				android:id="@+id/et_num_sets"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:layout_centerInParent="true"
				android:layout_margin="2dp"
				android:ems="4"
				android:inputType="number"
				android:text="@string/starting_sets"
				android:textAlignment="center"
				android:selectAllOnFocus="true" />

			<ImageButton
				android:id="@+id/ibtn_dec_sets"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:layout_toStartOf="@id/et_num_sets"
				android:layout_margin="2dp"
				android:src="@drawable/ic_minus"/>

			<ImageButton
				android:id="@+id/ibtn_inc_sets"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_margin="2dp"
				android:layout_toEndOf="@id/et_num_sets"
				android:src="@drawable/ic_plus"/>
		</RelativeLayout>
	<!--Number=of=Sets==========================================================================-->
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight"
		android:gravity="center"
		android:paddingTop="10dp"
		android:paddingBottom="5dp"
		android:paddingStart="2dp"
		android:paddingEnd="2dp">

		<TextView
			android:id="@+id/tv_center_footer"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerHorizontal="true"/>

		<Button
			android:id="@+id/btn_delete"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@id/tv_center_footer"
			android:layout_marginStart="2dp"
			android:layout_marginEnd="4dp"
			android:gravity="center"
			android:text="@string/delete"
			android:textSize="20sp"/>

		<Button
			android:id="@+id/btn_enter"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@id/tv_center_footer"
			android:layout_marginStart="4dp"
			android:layout_marginEnd="2dp"
			android:gravity="center"
			android:text="@string/enter"
			android:textSize="20sp"/>

		<Button
			android:id="@+id/btn_update"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@id/tv_center_footer"
			android:layout_marginStart="4dp"
			android:layout_marginEnd="2dp"
			android:gravity="center"
			android:text="@string/update"
			android:textSize="20sp"
			android:visibility="invisible"/>
	</RelativeLayout>
</LinearLayout>