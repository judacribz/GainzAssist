<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:autofit="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="5dp"
	android:background="@color/colorBg"
	tools:context=".activities.start_workout.fragments.WorkoutScreen">

    <!--Resources:
        http://www.fontspace.com/category/athletic -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:background="@color/colorLightBg"
		android:layout_margin="2dp"
        android:layout_weight="5">

        <!-- Exercise name -->
        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_exercise_title"
            android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/colorLightBg"
			android:layout_margin="1dp"
            android:gravity="center"
			android:maxLines="2"
			android:textSize="32sp"
			autofit:minTextSize="16sp"
            android:fontFamily="@font/fnl"/>

        <!-- Exercise/ExerciseSet number -->
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_exercise_title"
			android:background="@color/colorLightBg"
            android:orientation="vertical"
            android:paddingBottom="5dp">

			<me.grantland.widget.AutofitTextView
                android:id="@+id/tv_ex_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
				android:background="@color/colorLightBg"
                android:gravity="center"
				android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
				android:maxLines="1"
				android:textSize="20sp"
				autofit:minTextSize="12sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_set_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
				android:background="@color/colorLightBg"
                android:gravity="center"
				android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
				android:maxLines="1"
				android:textSize="20sp"
				autofit:minTextSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Equipment graphics -->
    <RelativeLayout
        android:id="@+id/rl_equip_disp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
		android:layout_margin="2dp"
		android:background="@color/colorLightBg">

		<!-- Timer -->
		<me.grantland.widget.AutofitTextView
			android:id="@+id/tv_timer"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:background="@color/colorLightBg"
			android:longClickable="false"
			android:gravity="center"
			android:textSize="50sp"
			autofit:minTextSize="16sp"/>
	</RelativeLayout>

    <!-- TODO fix edittext heights (make identical)-->
    <!-- Exercise reps and weight control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_margin="2dp"
        android:layout_weight="5"
		android:paddingBottom="5dp"
		android:background="@color/colorLightBg">

		<TextView
			android:id="@+id/tv_center"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentTop="true"/>

		<me.grantland.widget.AutofitLayout
			android:id="@+id/afl_curr_reps"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		  	android:layout_margin="10dp"
		  	android:layout_above="@id/tv_reps_et"
		  	android:layout_alignParentStart="true"
		  	android:layout_alignParentTop="true"
		  	android:layout_toStartOf="@id/tv_center">

			<EditText
				android:id="@+id/et_curr_reps"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:inputType="number"
				android:maxLength="4"
				android:selectAllOnFocus="true"
				android:singleLine="true"
				android:textSize="45sp"/>
		</me.grantland.widget.AutofitLayout>

        <ImageButton
            android:id="@+id/btn_dec_reps"
            android:layout_width="50dp"
            android:layout_height="50dp"
			android:layout_alignStart="@id/afl_curr_reps"
			android:layout_alignParentBottom="true"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_reps"
            android:layout_width="50dp"
            android:layout_height="50dp"
			android:layout_alignEnd="@id/afl_curr_reps"
			android:layout_alignParentBottom="true"
            android:src="@drawable/ic_plus"/>

		<ImageButton
			android:id="@+id/btn_lock_reps"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:layout_toEndOf="@id/btn_dec_reps"
			android:layout_toStartOf="@id/btn_inc_reps"
			android:padding="3dp"
			android:background="@color/colorLightAccent"
			android:src="@drawable/ic_unlock"/>

		<TextView
			android:id="@+id/tv_reps_et"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/btn_lock_reps"
			android:layout_alignStart="@id/afl_curr_reps"
			android:layout_alignEnd="@id/afl_curr_reps"
			android:gravity="center"
			android:text="@string/reps"/>

		<me.grantland.widget.AutofitLayout
			android:id="@+id/afl_curr_weight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:layout_above="@id/tv_weight_et"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@id/tv_center">

			<EditText
				android:id="@+id/et_curr_weight"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:inputType="numberDecimal"
				android:maxLength="7"
				android:selectAllOnFocus="true"
				android:singleLine="true"
				android:textSize="45sp"/>
		</me.grantland.widget.AutofitLayout>

        <ImageButton
            android:id="@+id/btn_dec_weight"
            android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignStart="@id/afl_curr_weight"
			android:layout_alignParentBottom="true"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_weight"
            android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignEnd="@id/afl_curr_weight"
			android:layout_alignParentBottom="true"
            android:src="@drawable/ic_plus"/>

		<ImageButton
			android:id="@+id/btn_lock_weight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:layout_toEndOf="@id/btn_dec_weight"
			android:layout_toStartOf="@id/btn_inc_weight"
			android:padding="2dp"
			android:background="@color/colorLightAccent"
			android:src="@drawable/ic_unlock"/>

		<TextView
			android:id="@+id/tv_weight_et"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/btn_lock_weight"
			android:layout_alignStart="@id/afl_curr_weight"
			android:layout_alignEnd="@id/afl_curr_weight"
			android:gravity="center"
			android:text="@string/weight_lbs"/>
    </RelativeLayout>

    <!-- Exercise currSet control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
		android:background="@color/colorLightBg"
		android:layout_margin="2dp"
        android:padding="2dp">

        <Button
            android:id="@+id/btn_finish_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/finish_set"
			android:gravity="center"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>