<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent" xmlns:autofit="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  tools:context=".activities.start_workout.fragments.WorkoutScreen">

    <!--Resources:
        http://www.fontspace.com/category/athletic -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:background="@color/colorAccent"
        android:layout_weight="5">

        <!-- How to do exercise button-->

        <Button
            android:id="@+id/btn_how_to"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
			android:layout_margin="2.2dp"
            android:background="@drawable/anim_button_ripple"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/how_to"
            android:textColor="@drawable/selector_btn_text_default"
            android:textSize="20sp"/>

        <!-- Exercise name -->
        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_how_to"
            android:layout_alignTop="@id/btn_how_to"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/btn_how_to"
			android:background="@color/colorAccent"
            android:gravity="center"
			android:maxLines="2"
			android:textSize="32sp"
			autofit:minTextSize="16sp"
            android:fontFamily="@font/fnl"/>

		<!-- Timer -->
		<me.grantland.widget.AutofitTextView
				android:id="@+id/tv_timer"
				android:layout_width="250dp"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/ll_info"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:background="@color/colorAccent"
				android:longClickable="false"
				android:gravity="center"
				android:textColor="@color/colorText"
				android:textSize="50sp"
				autofit:minTextSize="16sp"/>

        <!-- Exercise/ExerciseSet number -->
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
			android:layout_alignStart="@id/tv_timer"
            android:layout_below="@id/btn_how_to"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_ex_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
				android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
				android:textSize="25sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_set_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
				android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
				android:textSize="25sp"
				autofit:minTextSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Equipment graphics -->
    <RelativeLayout
        android:id="@+id/rl_equip_disp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorText">
    </RelativeLayout>

    <!-- TODO fix edittext heights (make identical)-->
    <!-- Exercise reps and weight control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:background="@color/colorAccent">

        <EditText
            android:id="@+id/et_curr_reps"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btn_dec_reps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_reps"
            android:layout_alignBottom="@id/et_curr_reps"
            android:layout_toStartOf="@id/et_curr_reps"
            android:background="@drawable/anim_button_ripple"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_reps"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_reps"
            android:layout_alignBottom="@id/et_curr_reps"
            android:layout_toEndOf="@id/et_curr_reps"
            android:background="@drawable/anim_button_ripple"
            android:src="@drawable/ic_plus"/>

        <EditText
            android:id="@+id/et_curr_weight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/et_curr_reps"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorBg"
            android:inputType="number"
            android:minWidth="100dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btn_dec_weight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_weight"
            android:layout_alignBottom="@id/et_curr_weight"
            android:layout_toStartOf="@id/et_curr_weight"
            android:background="@drawable/anim_button_ripple"
            android:src="@drawable/ic_minus"/>

        <ImageButton
            android:id="@+id/btn_inc_weight"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/et_curr_weight"
            android:layout_alignBottom="@id/et_curr_weight"
            android:layout_toEndOf="@id/et_curr_weight"
            android:background="@drawable/anim_button_ripple"
            android:src="@drawable/ic_plus"/>
    </RelativeLayout>

    <!-- Exercise currSet control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:padding="3dp">

        <Button
            android:id="@+id/btnCancelSet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/anim_button_ripple"
            android:gravity="center"
            android:text="@string/cancel_set"
            android:textColor="@drawable/selector_btn_text_default"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_finish_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/anim_button_ripple"
            android:gravity="center"
            android:text="@string/finish_set"
            android:textColor="@drawable/selector_btn_text_default"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>