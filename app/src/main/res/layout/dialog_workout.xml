<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<me.grantland.widget.AutofitTextView
		android:id="@+id/tv_workout_name"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ll_lg_weight"
		android:layout_margin="20dp"
		android:textColor="@color/colorBg"
		android:textSize="30sp"/>


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_margin="20dp"
		android:layout_weight="@integer/ll_lg_weight">

		<TextView
			android:id="@+id/center_dialog"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerHorizontal="true"/>

		<Button
			android:id="@+id/btn_delete_workout"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@id/center_dialog"
			android:gravity="center"
			android:text="@string/delete"/>

		<Button
			android:id="@+id/btn_edit_workout"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@id/center_dialog"
			android:gravity="center"
			android:text="@string/edit"/>
	</RelativeLayout>


</LinearLayout>