<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<solid android:color="#215466"/>

			<stroke
				android:width="1dp"
				android:color="@color/colorBg" />

			<corners android:radius="10dp" />

		</shape>
	</item>

	<item
		android:left="3dp"
		android:right="3dp"
		android:top="3dp"
		android:bottom="3dp">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<gradient
				android:type="linear"
				android:centerX="0%"
				android:startColor="@color/com_facebook_blue"
				android:endColor="@color/com_facebook_blue"
				android:angle="45"/>

			<corners android:radius="10dp" />
		</shape>
	</item>
</layer-list>