<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/colorLightAccent"/>
			<corners android:radius="7dp" />

			<padding
				android:bottom="1dp"
				android:left="1dp"
				android:right="1dp"
				android:top="1dp" />
		</shape>
	</item>

	<item
		android:left="0dp"
		android:right="0dp"
		android:top="0dp"
		android:bottom="3dp">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<gradient
				android:type="linear"
				android:centerX="0%"
				android:startColor="@color/colorGreen"
				android:endColor="@color/colorGreen"
				android:angle="45"/>


			<stroke
				android:width="1dp"
				android:color="@color/colorBg" />
			<corners android:radius="3dp" />
		</shape>
	</item>
</layer-list>