<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/colorLightAccent"/>
			<corners android:radius="15dp" />
		</shape>
	</item>

	<item
		android:bottom="3dp"
		android:top="1dp"
		android:left="1dp"
		android:right="1dp">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<gradient
				android:type="linear"
				android:centerX="0%"
				android:startColor="#16A85A"
				android:endColor="#16A85A"
				android:angle="45"/>

			<stroke
				android:width="1dp"
				android:color="@color/colorBg" />

			<corners
				android:radius="10dp"/>
		</shape>
	</item>
</layer-list>