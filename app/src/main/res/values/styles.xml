<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorBg</item>
    </style>

    <style name="ToolBarTextStyle">
        <item name="android:shadowColor">@color/colorBg</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textColor">@color/colorBg</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="WorkoutTheme" parent="AppTheme">
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:background">@color/colorDarkGreen</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="editTextStyle">@style/EditTextRipple</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:imageButtonStyle">@style/ImageButtonStyle</item>
    </style>

    <style name="AddWorkoutTheme" parent="AppTheme">
        <item name="editTextStyle">@style/EditTextRipple</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ImageButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_btn_default</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@drawable/selector_btn_text_default</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/selector_btn_default</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/text_view_box</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_box</item>
        <item name="android:textColorHighlight">@color/colorDarkText</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditTextRipple" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/anim_edit_text_ripple</item>
        <item name="android:textColorHighlight">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="HintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@drawable/search_text_box</item>
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>
</resources>
