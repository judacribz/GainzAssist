<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorBg</item>
    </style>

    <style name="ToolBarTextStyle">
        <item name="android:shadowColor">@color/colorBg</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="WorkoutTheme" parent="AppTheme">
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
    </style>

    <style name="AddWorkoutTheme" parent="AppTheme">
        <item name="editTextStyle">@style/EditTextRipple</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ImageButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/anim_button_ripple</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_box</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/text_view_box</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_box</item>
        <item name="android:textColorHighlight">@color/colorText</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditTextRipple" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/anim_button_ripple</item>
        <item name="android:textColorHighlight">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@drawable/search_text_box</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/colorTitle</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/colorAccent</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>
    </style>

</resources>
