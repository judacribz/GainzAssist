<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ca.judacribz.gainzassist">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- Login Activity -->
        <activity android:name=".activities.authentication.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

        <!-- Facebook Login Config and Activity -->
        <!-- ================================================================================== -->
        <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/fb_app_id"/>

        <activity
                android:name="com.facebook.FacebookActivity"
                android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                android:label="@string/app_name"/>
        <activity
                android:name="com.facebook.CustomTabActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data android:scheme="@string/fb_login_protocol_scheme"/>
            </intent-filter>
        </activity>
        <!-- Facebook==login==config=========================================================== -->


        <!-- Main Activity -->
        <activity android:name=".Main"/>

        <!-- HowToVideos Activity -->
        <activity android:name=".activities.how_to_videos.HowToVideos"/>

        <!-- WorkoutsList Activity -->
        <activity
                android:name=".activities.workouts_list.WorkoutsList"
                android:windowSoftInputMode="adjustPan|stateHidden"/>

        <!-- StartWorkout Activity -->
        <activity
                android:name=".activities.start_workout.StartWorkout"
                android:windowSoftInputMode="adjustPan|stateHidden"/>

        <!-- NewWorkoutSummary Activity -->
        <activity
                android:name=".activities.add_workout.NewWorkoutSummary"
                android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".activities.add_workout.WorkoutEntry"/>
        <activity android:name=".activities.add_workout.ExercisesEntry"/>

        <service
                android:name=".async.FirebaseService"
                android:exported="false">
        </service>
    </application>

</manifest>